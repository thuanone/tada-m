{
  "appenders": {
    "console": { "type": "console", "layout": { "type": "colored" } },
    "reduceNoise": { "type": "logLevelFilter", "level": "info", "appender": "console" }
  },
  "categories": {
    "default": { "appenders": ["console"], "level": "debug" },
    "bluemix-express-session": { "appenders": ["reduceNoise"], "level": "info", "type": "bluemix-express-session" },
    "@console/console-platform-monitor-publish": { "appenders": ["reduceNoise"], "level": "info", "type": "@console/console-platform-monitor-publish" }
  },
  "replaceConsole":true
}